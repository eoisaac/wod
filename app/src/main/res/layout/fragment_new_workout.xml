<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.NewWorkoutFragment"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
    >

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/new_workout_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/new_workout"
                style="@style/SubtitleTextStyle"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/create_workout_button"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/create_workout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create"
                style="@style/PrimaryLinkButtonStyle"
                android:paddingHorizontal="8dp"
                app:icon="@drawable/check"
                app:iconSize="22dp"
                app:layout_constraintTop_toTopOf="@+id/new_workout_title"
                app:layout_constraintBottom_toBottomOf="@+id/new_workout_title"
                app:layout_constraintStart_toEndOf="@+id/new_workout_title"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextInputLayoutStyle"
                app:endIconMode="clear_text"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_workout_title"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_text_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextInputEditTextStyle"
                    android:hint="@string/name"
                    android:inputType="text"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/date_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextInputLayoutStyle"
                app:endIconMode="clear_text"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_text_input_layout"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_text_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextInputEditTextStyle"
                    android:hint="@string/week_day"
                    android:inputType="text"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/exercises_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/exercises"
                style="@style/SubtitleTextStyle"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/date_text_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/new_exercise_button"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/new_exercise_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                style="@style/PrimaryLinkButtonStyle"
                android:paddingHorizontal="8dp"
                app:iconSize="22dp"
                app:icon="@drawable/plus_circle_icon"
                app:layout_constraintTop_toTopOf="@+id/exercises_title"
                app:layout_constraintBottom_toBottomOf="@+id/exercises_title"
                app:layout_constraintStart_toEndOf="@+id/exercises_title"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/exercise_name_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextInputLayoutStyle"
                app:endIconMode="clear_text"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintHorizontal_weight="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exercise_sets_text_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/exercises_title"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/exercise_name_text_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextInputEditTextStyle"
                    android:hint="@string/exercise_name"
                    android:inputType="text"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/exercise_sets_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextInputLayoutStyle"
                app:endIconMode="clear_text"
                app:layout_constraintHorizontal_weight="0.25"
                app:layout_constraintTop_toTopOf="@+id/exercise_name_text_input_layout"
                app:layout_constraintBottom_toBottomOf="@id/exercise_name_text_input_layout"
                app:layout_constraintStart_toEndOf="@+id/exercise_name_text_input_layout"
                app:layout_constraintEnd_toEndOf="parent"
        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/exercise_sets_text_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextInputEditTextStyle"
                    android:hint="@string/sets"
                    android:inputType="number"
            />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>