<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignInActivity"
        android:padding="24dp"
>

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sign_in_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/sign_in_title"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/email_text_input_layout"
    />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_text_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextInputLayoutStyle"
            app:endIconMode="clear_text"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_in_title"
            app:layout_constraintBottom_toTopOf="@id/password_text_input_layout"
    >
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_text_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputEditTextStyle"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_text_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextInputLayoutStyle"
            android:layout_marginTop="24dp"
            app:endIconMode="password_toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_text_input_layout"
            app:layout_constraintBottom_toTopOf="@id/remember_me_checkbox"
    >
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_text_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextInputEditTextStyle"
                android:hint="@string/password"
                android:inputType="textPassword"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/remember_me_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CheckboxStyle"
            android:text="@string/remember_me"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/password_text_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sign_in_button"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_in_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sign_in"
            style="@style/PrimaryButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/remember_me_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/forgot_password_button"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forgot_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/forgot_password"
            style="@style/LinkButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/sign_in_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sing_up_text_message"
    />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sing_up_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_have_an_account"
            android:textColor="@color/gray_11"
            android:textSize="16sp"
            android:paddingVertical="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@id/forgot_password_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/navigate_to_sign_up_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/navigate_to_sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            style="@style/LinkButtonStyle"
            android:minWidth="0dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@id/sing_up_text_message"
            app:layout_constraintBottom_toBottomOf="@id/sing_up_text_message"
            app:layout_constraintStart_toEndOf="@id/sing_up_text_message"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>